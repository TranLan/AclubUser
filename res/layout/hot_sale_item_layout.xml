<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp" >

    <ImageView
        android:id="@+id/hot_sale_item_avatar_iv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/hot_sale_one" />

    <RelativeLayout
        android:id="@+id/hot_sale_relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hot_sale_item_avatar_iv"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp" >

        <Button
            android:id="@+id/hot_sale_item_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/aclub_first_fg_button_style"
            android:text="@string/confirm_now_lable"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:id="@+id/hot_sale_item_info_re"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/hot_sale_item_confirm_btn" >

            <TextView
                android:id="@+id/hot_sale_item_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:text="@string/hot_sale_item_title"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/hot_sale_item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/hot_sale_item_title_tv"
                android:layout_marginTop="3dp"
                android:text="300,000 VND/kg"
                android:textColor="@color/action_bar_background" />

            <TextView
                android:id="@+id/hot_sale_item_restaurance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hot_sale_item_title_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/hot_sale_item_price_tv"
                android:text="Nhà hàng trung hoa" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>