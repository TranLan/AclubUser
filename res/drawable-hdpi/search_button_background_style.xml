<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/search_restaurance_background_color" />

            <stroke android:width="1dp" android:color="@android:color/white" />

            <corners android:radius="6dp" />

            <padding android:left="10dp" android:right="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/search_restaurance_background_color" android:startColor="@color/search_restaurance_background_color" />

            <stroke android:width="1dp" android:color="@android:color/white" />

            <corners android:radius="6dp" />

            <padding android:left="10dp" android:right="10dp" />
        </shape></item>

</selector>